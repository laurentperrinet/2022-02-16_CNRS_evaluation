	month = jan,
	number = {1},
	pages = {e0190429},
	pmid = {29304087},
	title = {Human visual exploration reduces uncertainty about the sensed world},
	url = {http://www.ncbi.nlm.nih.gov/pubmed/29304087},
	volume = {13},
